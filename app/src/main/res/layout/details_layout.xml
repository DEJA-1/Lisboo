<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/details_layout">

    <TextView
        android:id="@+id/details_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:ems="10"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Atomic Habits"
        tools:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/details_book_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:ems="10"
        android:textColor="@color/orange_main"
        android:textStyle="italic"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_book_title"
        tools:text="Atomic Habits is a book with consists of many helpful ways to imrpove your livestyle"
        tools:textColor="@color/black">
    </TextView>




</androidx.constraintlayout.widget.ConstraintLayout>